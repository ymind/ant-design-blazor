            <div class="ant-space-item" style="margin-bottom:24px;"><button type="button" class="ant-btn ant-btn-dashed"><span>Dashed</span></button></div>
            <div class="ant-space-item" style="margin-bottom:24px;"><button type="button" class="ant-btn ant-btn-link"><span>Link</span></button></div>
        </div>
    </ExpectedOutput>
</SnapshotTest>