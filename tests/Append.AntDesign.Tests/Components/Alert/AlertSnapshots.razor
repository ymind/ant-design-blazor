@inherits TestComponentBase

<SnapshotTest Description="Basic"
              Setup="(SnapshotTest test) => test.Services.AddSingleton<IIconService,IconServiceMock>()">
    <TestInput>
        <Alert Type="AlertType.Success">
            <Message>Success Text</Message>
        </Alert>
    </TestInput>
    <ExpectedOutput>
        <div class="ant-alert ant-alert-success ant-alert-no-icon">
            <span class="ant-alert-message">Success Text</span>
            <span class="ant-alert-description"></span>
        </div>
    </ExpectedOutput>
</SnapshotTest>

<SnapshotTest Description="Closable"
              Setup="(SnapshotTest test) => test.Services.AddSingleton<IIconService,IconServiceMock>()">
    <TestInput>
        <Alert Type="AlertType.Warning" Closable>
            <Message>Warning Text</Message>
        </Alert>
        <Alert Type="AlertType.Error" Closable>
            <Message>Error Text</Message>
            <Description>Error Description</Description>
        </Alert>
    </TestInput>
    <ExpectedOutput>
        <div class="ant-alert ant-alert-warning ant-alert-no-icon ant-alert-closable">
            <span class="ant-alert-message">Warning Text</span>
            <span class="ant-alert-description"></span>
            <button type="button" class="ant-alert-close-icon" tabindex="0">
                <span role="img" aria-label="close" class="anticon anticon-close">
                    <svg viewBox="64 64 896 896" class="icon" focusable="false" data-icon="close"
                         width="1em" height="1em" fill="currentColor" aria-hidden="true" xmlns="http://www.w3.org/2000/svg">
                        <path d="M563.8 512l262.5-312.9c4.4-5.2.7-13.1-6.1-13.1h-79.8c-4.7 0-9.2 2.1-12.3 5.7L511.6 449.8 295.1 191.7c-3-3.6-7.5-5.7-12.3-5.7H203c-6.8 0-10.5 7.9-6.1 13.1L459.4 512 196.9 824.9A7.95 7.95 0 0 0 203 838h79.8c4.7 0 9.2-2.1 12.3-5.7l216.5-258.1 216.5 258.1c3 3.6 7.5 5.7 12.3 5.7h79.8c6.8 0 10.5-7.9 6.1-13.1L563.8 512z">
                        </path>
                    </svg>
                </span>
            </button>
        </div>
        <div class="ant-alert ant-alert-error ant-alert-with-description ant-alert-no-icon ant-alert-closable">
            <span class="ant-alert-message">Error Text</span>
            <span class="ant-alert-description">Error Description</span>
            <button type="button" class="ant-alert-close-icon" tabindex="0">
                <span role="img" aria-label="close" class="anticon anticon-close">
                    <svg viewBox="64 64 896 896" class="icon" focusable="false" data-icon="close"
                         width="1em" height="1em" fill="currentColor" aria-hidden="true" xmlns="http://www.w3.org/2000/svg">
                        <path d="M563.8 512l262.5-312.9c4.4-5.2.7-13.1-6.1-13.1h-79.8c-4.7 0-9.2 2.1-12.3 5.7L511.6 449.8 295.1 191.7c-3-3.6-7.5-5.7-12.3-5.7H203c-6.8 0-10.5 7.9-6.1 13.1L459.4 512 196.9 824.9A7.95 7.95 0 0 0 203 838h79.8c4.7 0 9.2-2.1 12.3-5.7l216.5-258.1 216.5 258.1c3 3.6 7.5 5.7 12.3 5.7h79.8c6.8 0 10.5-7.9 6.1-13.1L563.8 512z">
                        </path>
                    </svg>
                </span>
            </button>
        </div>
    </ExpectedOutput>
</SnapshotTest>

<SnapshotTest Description="Customize Close Text"
              Setup="(SnapshotTest test) => test.Services.AddSingleton<IIconService,IconServiceMock>()">
    <TestInput>
        <Alert Type="AlertType.Info" Closable>
            <Message>Info Text</Message>
            <CloseText>Close Now</CloseText>
        </Alert>
    </TestInput>
    <ExpectedOutput>
        <div class="ant-alert ant-alert-info ant-alert-no-icon ant-alert-closable">
            <span class="ant-alert-message">Info Text</span>
            <span class="ant-alert-description"></span>
            <button type="button" class="ant-alert-close-icon" tabindex="0">
                <span class="ant-alert-close-text">Close Now</span>
            </button>
        </div>
    </ExpectedOutput>
</SnapshotTest>