@inherits TestComponentBase

<SnapshotTest Description="InputBasic">
    <TestInput>
        <Input placeholder="Basic usage" />
    </TestInput>
    <ExpectedOutput>
        <input placeholder="Basic usage" type="text" class="ant-input">
    </ExpectedOutput>
</SnapshotTest>


<SnapshotTest Description="InputClearWithIcon" Setup="(SnapshotTest test) => test.Services.AddSingleton<IIconService,IconServiceMock>()">
    <TestInput>
        <Input AllowClear placeholder="Input with clear icon" />
    </TestInput>
    <ExpectedOutput>
        <span class="ant-input-affix-wrapper">
            <input placeholder="Input with clear icon" type="text" class="ant-input">
            <span class="ant-input-suffix">
                <span role="img" aria-label="close_circle" class="ant-input-clear-icon ant-input-clear-icon-hidden anticon anticon-close_circle">
                    <svg diff:ignore></svg>
                </span>
            </span>
        </span>
    </ExpectedOutput>
</SnapshotTest>

<SnapshotTest Description="TextAreaClearWithIcon" Setup="(SnapshotTest test) => test.Services.AddSingleton<IIconService,IconServiceMock>()">
    <TestInput>
        <TextArea AllowClear placeholder="Textarea with clear icon" />
    </TestInput>
    <ExpectedOutput>
        <span class="ant-input-affix-wrapper ant-input-affix-wrapper-textarea-with-clear-btn">
            <textarea placeholder="Textarea with clear icon" id="txtArea" rows="3" style="margin-top: 0px;margin-bottom: 0px" class="ant-input"></textarea>
            <span>
                <span role="img" aria-label="close_circle" class="ant-input-textarea-clear-icon ant-input-textarea-clear-icon-hidden anticon anticon-close_circle">
                    <svg diff:ignore xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="64 64 896 896" height="1em" width="1em" fill="currentColor" data-icon="close_circle" focusable="false" aria-hidden="true">
                    </svg>
                </span>
            </span>
        </span>
    </ExpectedOutput>
</SnapshotTest>

