<SnapshotTest Description="SearchLoadingEnterButton" Setup="(SnapshotTest test) => test.Services.AddSingleton<IIconService,IconServiceMock>()">
    <TestInput>
        <Search placeholder="input search loading with enterButton" Loading EnterButton="" />
    </TestInput>
    <ExpectedOutput>
        <span class="ant-input-group-wrapper ant-input-search ant-input-search-enter-button">
            <span class="ant-input-wrapper ant-input-group">
                <span class="ant-input-search-enter-button">
                    <input placeholder="input search loading with enterButton" type="search" class="ant-input">
                </span>
                <span class="ant-input-group-addon">
                    <button type="button" class="ant-input-search-button ant-btn ant-btn-primary ant-btn-icon-only">
                        <span role="img" aria-label="loading" class="anticon anticon-loading">
                            <svg diff:ignore>
                            </svg>
                        </span>
                    </button>
                </span>
            </span>
        </span>
    </ExpectedOutput>
</SnapshotTest>

