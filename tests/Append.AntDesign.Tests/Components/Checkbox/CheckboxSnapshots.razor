@inherits TestComponentBase

<SnapshotTest Description="Basic">
    <TestInput>
        <Checkbox>Checkbox</Checkbox>
    </TestInput>
    <ExpectedOutput>
        <label class="ant-checkbox-wrapper">
            <span class="ant-checkbox">
                <input type="checkbox" class="ant-checkbox-input">
                <span class="ant-checkbox-inner"></span>
            </span>
            <span>Checkbox</span>
        </label>
    </ExpectedOutput>
</SnapshotTest>

<SnapshotTest Description="Disabled">
    <TestInput>
        <Checkbox Disabled />
    </TestInput>
    <ExpectedOutput>
        <label class="ant-checkbox-wrapper ant-checkbox-wrapper-disabled">
            <span class="ant-checkbox ant-checkbox-disabled">
                <input type="checkbox" class="ant-checkbox-input">
                <span class="ant-checkbox-inner"></span>
            </span>
        </label>
    </ExpectedOutput>
</SnapshotTest>

<SnapshotTest Description="Indeterminate">
