    </ExpectedOutput>
</SnapshotTest>

<SnapshotTest Description="Options">
    <TestInput>
        <CheckboxGroup Options="options1" DefaultValue="@(new List<string>(new string[] { apple }))" />
        @code{
            private static readonly string apple = "Apple";
            private static readonly string pear = "Pear";
            private static readonly string orange = "Orange";

            List<CheckboxGroupOption> options1 = new List<CheckboxGroupOption>(new CheckboxGroupOption[] { CheckboxGroupOption.Create(apple), CheckboxGroupOption.Create(pear), CheckboxGroupOption.Create(orange) });
        }
    </TestInput>
    <ExpectedOutput>
        <div class="ant-checkbox-group">
            <label class="ant-checkbox-wrapper ant-checkbox-wrapper-checked">
                <span class="ant-checkbox ant-checkbox-checked">
                    <input type="checkbox" class="ant-checkbox-input" value="Apple">
                    <span class="ant-checkbox-inner"></span>
                </span>
                <span>
                    Apple
                </span>
            </label>
            <label class="ant-checkbox-wrapper">
                <span class="ant-checkbox">
                    <input type="checkbox" class="ant-checkbox-input" value="Pear">
                    <span class="ant-checkbox-inner"></span>
                </span>
                <span>
                    Pear
                </span>
            </label>
            <label class="ant-checkbox-wrapper">
                <span class="ant-checkbox">
                    <input type="checkbox" class="ant-checkbox-input" value="Orange">
                    <span class="ant-checkbox-inner"></span>
                </span>
                <span>
                    Orange
                </span>
            </label>
        </div>
    </ExpectedOutput>
</SnapshotTest>

