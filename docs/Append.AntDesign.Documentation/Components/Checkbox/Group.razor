<Codebox Title="Checkbox Group">
    <Description>
        <p>
            Generate a group of checkboxes from an array.
        </p>
    </Description>
    <Demo>
        <CheckboxGroup Options="options1" DefaultValue="new List<string>(new string[] { apple })" />
        <br />
        <br />
        <CheckboxGroup Options="options2" DefaultValue="new List<string>(new string[] { pear })" Disabled />
        <br />
        <br />
        <CheckboxGroup Options="options3" DefaultValue="new List<string>(new string[] { apple })" />
    </Demo>
</Codebox>
@code{
    private static readonly string apple = "Apple";
    private static readonly string pear = "Pear";
    private static readonly string orange = "Orange";

    List<CheckboxGroupOption> options1 = new List<CheckboxGroupOption>(new CheckboxGroupOption[] { CheckboxGroupOption.Create(apple), CheckboxGroupOption.Create(pear), CheckboxGroupOption.Create(orange) });
    List<CheckboxGroupOption> options2 = new List<CheckboxGroupOption>(new CheckboxGroupOption[] { CheckboxGroupOption.Create(apple, apple), CheckboxGroupOption.Create(pear, pear), CheckboxGroupOption.Create(orange, orange) });
    List<CheckboxGroupOption> options3 = new List<CheckboxGroupOption>(new CheckboxGroupOption[] { CheckboxGroupOption.Create(apple, apple), CheckboxGroupOption.Create(pear, pear, true), CheckboxGroupOption.Create(orange, orange) });
}