<Codebox Title="Controlled checkbox">
    <Description>
        Communicated with other components.
    </Description>
    <Demo>
        <Checkbox Checked="@_checkedState" Disabled="@_disabledState" OnChange="CheckboxChanged">
            @($"{_checkedStateMessage} - {_disabledStateMessage}")
        </Checkbox>
        <br />
        <br />
        <Button Label="@_button1Label" OnClick="ClickButton1" />
        <Button Label="@_button2Label" OnClick="ClickButton2" />
    </Demo>
</Codebox>
@code{
    private string _button1Label = "Uncheck";
    private string _button2Label = "Disable";
    private bool _disabledState;
    private bool _checkedState = true;

    private string _checkedStateMessage => _checkedState ? "Checked" : "Unchecked";
    private string _disabledStateMessage => _disabledState ? "Disabled" : "Enabled";

    private void CheckboxChanged(bool checkedState)
    {
        _checkedState = checkedState;
        _button1Label = checkedState ? "Uncheck" : "Check";
    }
    private void ClickButton1()
    {
        _checkedState = !_checkedState;
        _button1Label = _checkedState ? "Uncheck" : "Check";
    }
    private void ClickButton2()
    {
        _disabledState = !_disabledState;
        _button2Label = _disabledState ? "Enable" : "Disable";
    }
}